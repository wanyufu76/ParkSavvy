{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/client",
    "rootDir": "../",
    "noEmit": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "types": ["google.maps", "vite/client"]
  },
  "include": ["client/src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"]
}


