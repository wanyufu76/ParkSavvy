{
  "extends": "../tsconfig.base.json",
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"],
  "compilerOptions": {
    "rootDir": ".",                // ✅ rootDir 改成 . 就好（也就是 server/）
    "outDir": "../dist/server",
    "noEmit": false,
    "types": ["node"],
    "baseUrl": ".",                // ✅ 保證 @shared 可解
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  }
}
