{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../",                         // ⬅️ 讓 shared 被包含（因為 shared 在根目錄）
    "outDir": "../dist/server",
    "noEmit": false,
    "types": ["node"],
    "esModuleInterop": true,
    "module": "commonjs",                     // ⬅️ 與 Express 相容
    "moduleResolution": "node",
    "target": "ES2020"
  },
  "include": ["../server/**/*", "../shared/**/*"],  // ⬅️ 指向正確的 server 與 shared
  "exclude": ["../node_modules", "../dist", "**/*.test.ts"]
}
