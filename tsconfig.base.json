{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",            // 保持與 Express 相容
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                  // 基底路徑
    "outDir": "dist",                // 最終輸出
    "rootDir": ".",                  // 根目錄（讓 shared 被包含進來）
    "resolveJsonModule": true
  }
}
